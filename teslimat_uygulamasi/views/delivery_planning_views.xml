<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Teslimat Planlama Tree View -->
    <record id="view_delivery_planning_tree" model="ir.ui.view">
        <field name="name">teslimat.planlama.tree</field>
        <field name="model">teslimat.planlama</field>
        <field name="arch" type="xml">
            <tree string="Teslimat Planlamasi">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="picking_id" string="Transfer"/>
                <field name="musteri"/>
                <field name="ilce"/>
                <field name="teslimat_tarihi"/>
                <field name="durum"/>
            </tree>
        </field>
    </record>

    <!-- Teslimat Planlama Form View -->
    <record id="view_teslimat_planlama_form" model="ir.ui.view">
        <field name="name">teslimat.planlama.form</field>
        <field name="model">teslimat.planlama</field>
        <field name="arch" type="xml">
            <form string="Teslimat Planlama">
                <header>
                    <button name="action_tamamlandi" string="Tamamlandı" type="object" class="oe_highlight" groups="teslimat_uygulamasi.group_teslimat_ekibi"/>
                    <button name="action_iptal" string="İptal" type="object" groups="teslimat_uygulamasi.group_teslimat_ekibi"/>
                    <button name="action_yolda" string="Yolda" type="object" groups="teslimat_uygulamasi.group_teslimat_ekibi"/>
                    <button name="action_beklemede" string="Beklemede" type="object" groups="teslimat_uygulamasi.group_teslimat_ekibi"/>
                    <button name="action_haritada_ac" string="Haritada Aç" type="object" class="btn-primary" groups="teslimat_uygulamasi.group_teslimat_ekibi"/>
                    <field name="durum" widget="statusbar" statusbar_visible="beklemede,yolda,tamamlandi"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_teslimat_raporu" type="object" class="oe_stat_button" icon="fa-file-text-o">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Rapor</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="siparis_turu"/>
                            <field name="sale_order_id" attrs="{'invisible': [('siparis_turu', '=', 'pos')]}"/>
                            <field name="pos_order_id" attrs="{'invisible': [('siparis_turu', '=', 'sale')]}"/>
                            <field name="picking_id" string="Transfer"/>
                            <field name="musteri"/>
                            <field name="ilce"/>
                            <field name="adres"/>
                            <field name="telefon"/>
                            <field name="ek_telefon"/>
                            <field name="teslimat_tarihi"/>
                            <field name="teslimat_gunu"/>
                        </group>
                        <group>
                            <field name="teslimat_sira"/>
                            <field name="teslimat_grubu"/>
                            <field name="teslimat_bolgesi"/>
                            <field name="teslimat_rota"/>
                            <field name="teslimat_km"/>
                            <field name="teslimat_suresi"/>
                            <field name="teslimat_maliyeti"/>
                            <field name="teslimat_personeli"/>
                            <field name="teslimat_araci"/>
                            <field name="teslimat_plaka"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Ürünler">
                            <field name="urun_ids">
                                <tree editable="bottom">
                                    <field name="urun_adi"/>
                                    <field name="miktar"/>
                                    <field name="birim"/>
                                    <field name="notlar"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Teslimat Detayları">
                            <group>
                                <field name="teslimat_baslangic"/>
                                <field name="teslimat_bitis"/>
                                <field name="teslimat_guncelleme"/>
                                <field name="teslimat_konum"/>
                                <field name="teslimat_koordinat"/>
                            </group>
                            <group>
                                <field name="teslimat_resim" widget="image"/>
                                <field name="teslimat_imza" widget="image"/>
                                <field name="teslimat_belge" widget="binary"/>
                                <field name="teslimat_fatura" widget="binary"/>
                                <field name="teslimat_irsaliye" widget="binary"/>
                            </group>
                        </page>
                        <page string="Notlar">
                            <field name="notlar"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Teslimat Planlama Kanban View -->
    <record id="view_delivery_planning_kanban" model="ir.ui.view">
        <field name="name">teslimat.planlama.kanban</field>
        <field name="model">teslimat.planlama</field>
        <field name="arch" type="xml">
            <kanban class="o_delivery_kanban_view" create="1">
                <field name="name"/>
                <field name="musteri"/>
                <field name="durum"/>
                <field name="teslimat_tarihi"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="musteri"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="teslimat_tarihi"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span t-attf-class="o_delivery_status o_delivery_status_#{kanban_color(durum)}">
                                            <field name="durum"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Teslimat Planlama Search View -->
    <record id="view_delivery_planning_search" model="ir.ui.view">
        <field name="name">teslimat.planlama.search</field>
        <field name="model">teslimat.planlama</field>
        <field name="arch" type="xml">
            <search string="Teslimat Planlamasi">
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="musteri"/>
                <filter string="Beklemede" name="beklemede" domain="[('durum','=','beklemede')]"/>
                <filter string="Yolda" name="yolda" domain="[('durum','=','yolda')]"/>
                <filter string="Tamamlandı" name="tamamlandi" domain="[('durum','=','tamamlandi')]"/>
                <group expand="0" string="Grupla">
                    <filter string="Durum" name="durum" context="{'group_by':'durum'}"/>
                    <filter string="Teslimat Tarihi" name="teslimat_tarihi" context="{'group_by':'teslimat_tarihi'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Teslimat Planlama Action -->
    <record id="action_delivery_planning" model="ir.actions.act_window">
        <field name="name">Teslimat Planlamasi</field>
        <field name="res_model">teslimat.planlama</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="search_view_id" ref="view_delivery_planning_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Henüz teslimat planlaması oluşturulmamış.
            </p>
            <p>
                Yeni bir teslimat planlaması oluşturmak için "Oluştur" butonuna tıklayın.
            </p>
        </field>
    </record>
</odoo> 